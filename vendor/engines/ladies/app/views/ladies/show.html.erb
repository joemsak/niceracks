<% content_for :body_content_title do %>
  <%= @lady.name %>
<% end %>

<% content_for :body_content_left do %>
  <section id="lady">
    <%= image_tag @lady.photo.thumbnail('368x').url %>
    <div class="info">
			<h1><%=raw @lady.name %></h1>
			<p><%=raw @lady.bio %></p>
		</div>
  </section>

<% end %>

<% content_for :body_content_right do %>
  <aside id="other-ladies">
    <h2><%= t('.other') %></h2>
		<ul id="ladies">
			<% @ladies.each do |lady| %>
				<li>
					<div>
						<% lady_photo = image_tag lady.photo.thumbnail('174x').url %>
						<%= link_to lady_photo, lady_url(lady), :class => 'photo' %>
						<%= link_to lady.name, lady_url(lady), :class => 'name' %>
					</div>
				</li>
			<% end %>
		</ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
