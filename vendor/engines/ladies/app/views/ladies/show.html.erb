<% content_for :body_content_title do %>
  <%= @lady.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @lady.name %>
    </p>
  </section>
  <section>
    <h1>Bio</h1>
    <p>
      <%=raw @lady.bio %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @lady.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="ladies">
      <% @ladies.each do |lady| %>
        <li>
          <%= link_to lady.name, lady_url(lady) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
