<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(performance) -%>">
  <span class='title'>
    <%= performance.name %>
    <span class="preview">(<%= performance.venue_name %>)</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), performance_url(performance),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_performance_path(performance),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_performance_path(performance),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => performance.name),
        :method => :delete %>
  </span>
</li>
