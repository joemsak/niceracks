<% content_for :body_content_left do %>
  <section>
    <h1><%= @performance.starts_at.strftime '%b %d' %> &ndash; <%= @performance.name %></h1>
    <p>
      From <%= @performance.starts_at.strftime '%b %d at %I:%M%p' %> until <%= @performance.ends_at.strftime '%b %d at %I:%M%p' %><br>
      <strong><%= @performance.cost %></strong><br>
      <%=auto_link @performance.link %>
    </p>
    <%=raw @performance.description %>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="performances">
      <% @performances.each do |performance| %>
        <li>
          <%= link_to performance.title, performance_url(performance) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page", :locals => { :remove_automatic_sections => true } %>
