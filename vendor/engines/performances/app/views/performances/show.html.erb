<% content_for :body_content_title do %>
  <%= @performance.venue_name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Venue Name</h1>
    <p>
      <%=raw @performance.venue_name %>
    </p>
  </section>
  <section>
    <h1>Starts At</h1>
    <p>
      <%=raw @performance.starts_at %>
    </p>
  </section>
  <section>
    <h1>Ends At</h1>
    <p>
      <%=raw @performance.ends_at %>
    </p>
  </section>
  <section>
    <h1>Cost</h1>
    <p>
      <%=raw @performance.cost %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @performance.description %>
    </p>
  </section>
  <section>
    <h1>Link</h1>
    <p>
      <%=raw @performance.link %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="performances">
      <% @performances.each do |performance| %>
        <li>
          <%= link_to performance.venue_name, performance_url(performance) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
