<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(photo) -%>">
  <span class='title'>
    <%= photo.caption %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), photo_url(photo),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_photo_path(photo),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_photo_path(photo),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => photo.caption),
        :method => :delete %>
  </span>
</li>
