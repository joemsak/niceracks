<%= form_for [:admin, @photo] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @photo,
          :include_object_name => true
        } %>
  
 <div class='field'>
    <%= f.label :picture -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :picture_id,
          :image => @photo.picture,
          :toggle_image_display => false
        } %>
  </div>
  
  <div class='field'>
    <%= f.label :tag_list, "Tags" -%>
    <%= f.text_field :tag_list, :class => 'larger' -%>
  </div>
  
  <div class='field'>
    <%= f.label :caption -%>
    <%= f.text_field :caption, :class => 'larger' -%>
  </div>
  
  
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.photos.photo'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @photo.caption)
              } %>
<% end -%>
